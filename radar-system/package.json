{
  "name": "radar-system",
  "version": "1.0.0",
  "description": "Production radar system for AI/agentic SMB opportunity signals",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "radar": "tsx scripts/run-radar.ts",
